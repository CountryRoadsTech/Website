<div class="d-flex justify-content-center">
  <h1>Calendar: <%= calendar.name %></h1>
</div>
<hr>
<%= month_calendar(events: calendar.calendar_events) do |date, events| %>
  <b><%= date.strftime("%-d") %></b>

  <% events.each do |event| %>
    <div>
      <%= event.name.truncate(30) %>
    </div>
  <% end %>
<% end %>
