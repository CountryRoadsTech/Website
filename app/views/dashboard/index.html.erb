      <td><%= visit.referrer %></td>
      <td><%= visit.referring_domain %></td>
      <td><%= visit.landing_page %></td>
      <td><%= visit.browser %></td>
      <td><%= visit.os %></td>
      <% if visit.country.nil? and visit.region.nil? and visit.city.nil? %>
        <td>N/A</td>
      <% else %>
        <td><%= "#{visit.city}, #{visit.region}, #{visit.country}" %></td>
      <% end %>
      <td><%= visit.started_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>

