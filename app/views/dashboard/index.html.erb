    <th scope="col">Landing Page</th>
    <th scope="col">Browser</th>
    <th scope="col">OS</th>
    <th scope="col">Location</th>
    <th scope="col">Created At</th>
  </tr>
  </thead>

  <tbody>
  <% @visits.each do |visit| %>
